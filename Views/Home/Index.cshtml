@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1>Dojo Survey</h1>
        <form action="postForm" method="post">
            <div class="mt-3 mb-3">
                <input class="form-control" asp-for="name" placeholder="Your Name">
                <span class="text-danger" asp-validation-for="name"></span>
            </div>
            <div>
                <select class="mt-3 form-select" aria-label="Default select example" asp-for="location">
                    <option value="">Pick a Location</option>
                    <option value="Tulsa">Tulsa</option>
                    <option value="San Francisco">San Francisco</option>
                    <option value="Atlanta">Atlanta</option>
                    <option value="Online">Online</option>
                </select>
                <span class="text-danger" asp-validation-for="location"></span>
            </div>
            <div>
                <select class="mt-3 form-select" aria-label="Default select example" asp-for="language">
                    <option value="">Pick Your Favorite Language</option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="C++">C++</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span class="text-danger" asp-validation-for="language"></span>
            </div>
            <div class="mt-3 form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" asp-for="area" id="floatingTextarea2"
                    style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
                <span class="text-danger" asp-validation-for="area"></span>
            </div>
            <button type="submit" class="mt-5 btn btn-primary float-end">Submit</button>
        </form>
</div>
